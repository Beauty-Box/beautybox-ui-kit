{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "module": "es2015",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "webpack-env"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./shims-vue.d.ts",
    ]
}
