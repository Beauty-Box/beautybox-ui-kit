    "scripts": {
        "serve": "start-storybook -p 5555 -s ./",
        "build": "build-storybook -o ./dist",
        "deploy": "build-storybook -o ./dist_new",
        "lint:scripts": "eslint --config /.eslintrc --fix --ext .js,.vue --ignore-path ../../.eslintignore .",
